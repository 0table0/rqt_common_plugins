<package>
  <description brief="Foundation for plugins using roscpp">

     rosgui_roscpp enables rosgui plugins to use the C++ client library for ROS.

  </description>
  <author>Dirk Thomas</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/rosgui_roscpp</url>

  <depend package="rosgui"/>
  <depend package="rosgui_cpp"/>
  <depend package="roscpp"/>
  <depend package="nodelet"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -Wl,-rpath,${prefix}/lib -lrosgui_roscpp"/>
    <rosgui plugin="${prefix}/roscpp_plugin.xml"/>
  </export>

</package>


