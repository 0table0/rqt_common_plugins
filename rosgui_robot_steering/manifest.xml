<package>
  <description brief="Plugin for steering a robot">

     rosgui_robot_steering provides a rosgui plugin for steering a robot using twist messages.

  </description>
  <author>Dirk Thomas</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/rosgui_robot_steering</url>

  <depend package="rosgui"/>
  <depend package="rosgui_rospy"/>
  <depend package="rostopic"/>
  <depend package="geometry_msgs"/>

  <export>
    <rosgui plugin="${prefix}/robot_steering_plugin.xml"/>
  </export>

</package>


